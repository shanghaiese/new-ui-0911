//add IT master look&feel 
$icon-font-path: "../bower_components/bootstrap-sass/assets/fonts/bootstrap/";
$intel-font-path: "../bower_components/it-mlaf-sass/fonts/";
@import "it-mlaf-sass/it-mlaf";
// import ilab newui base scss 
@import "base";
//add ilab customized iconfont lib
$ilab-font-path: "../bower_components/ilabicon/fonts/";
@import "dropdown.directive";
@import "ilabicon/style";
// import ilab customized scss partials
//@import "header";
body {
    font-size: 16px;
    .main-content {
        margin-top: 50px;
        margin-bottom: 50px;
        padding: 20px;
    }
}


/*collapse animate from bootstrap*/

.collapse {
    display: none;
}

.collapse.in {
    display: block;
}

.collapsing {
    position: relative;
    height: 0;
    overflow: hidden;
    transition: height .35s ease;
}


/*vm-table style start here*/

#vm-edit {
    border-top-width: 0px;
    border-bottom-width: 0px;
}

#vm-table {
    border-bottom-width: 0;
    tbody:nth-child(even) {
        border-top-width: 0px;
        border-bottom-width: 0px;
        background-color: $lighter-gray1;
    }
    tbody:nth-child(odd) {
        border-top-width: 0px;
        border-bottom-width: 0px;
        background-color: $white;
    }
    thead > tr > th,
    thead > tr > td,
    tbody > tr > th,
    tbody > tr > td,
    tfoot > tr > th,
    tfoot > tr > td {
        border-left: 0px;
        border-right: 0px;
        border-top: 1px;
    }
}

#vmName {
    color: #0071C5;
}

#checkbox-column {
    width: 60px;
}

/* ilab-dialog-message popup */

.popup-dialog>.popup-dialog-header {
  padding: 0px;
  margin: 5px 12px;
  color: #62b00a;
}
.popup-dialog>.popup-dialog-content {
  padding-left: 12px;
  padding-top: 0;
}
.popup-dialog>#dialog-success-img {
  margin-right: 10px;
  margin-top: 0px;
}

/*sortable table header */
.ilab-sortable thead tr {
    &:first-child th {
        /* background: $lighter-gray3;
    border: 0px;
    color: $black; */
        cursor: pointer;
        padding-right: 1.5em;
        position: relative;
        &.ilab-sort-desc:after {
            border-color: transparent transparent $light-gray transparent;
            border-style: solid;
            border-width: 0.5em;
            top: .05em;
            content: ' ';
            height: 0.75em;
            position: absolute;
            //Instead of the line below you could use @includeborder-radius($radius, $vertical-radius)
            border-radius: 4px;
            width: 0;
            z-index: 6;
        }
        &.ilab-sort-asc:after {
            border-color: $light-gray transparent transparent transparent;
            border-style: solid;
            border-width: 0.5em;
            bottom: .05em;
            content: ' ';
            height: 0.75em;
            position: absolute;
            //Instead of the line below you could use @includeborder-radius($radius, $vertical-radius)
            border-radius: 4px;
            width: 0;
            z-index: 6;
        }
    }
}

.modal-dialog {
    width: 400px; 
    
}


#search-vm,
#displaycolumn-vm {
    float: right;
    margin: 0.5em;
    color: $blue;
    display: inline-block;
}

#dropdown-running {
    color: $white;
    background-color: $green;
}

#dropdown-action {
    display: inline-block;
    margin: .5em;
}

#delete-action {
    color: $red;
}

#vm-configuration {
    color: $blue;
    display: inline-block;
    cursor: pointer;
}

.intel-checkbox {
    display: inline-block;
}

.search-panel {
    float: right;
    border: 1px solid $gray4;
    margin: .5em 0;
}

